<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.meiot.mapper.BulletinMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.meiot.entity.Bulletin">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="status" property="status" />
        <result column="create_by" property="createBy" />
        <result column="create_time" property="createTime" />
        <result column="update_by" property="updateBy" />
        <result column="update_time" property="updateTime" />
        <result column="push_aims" property="pushAims" />
        <result column="push_time" property="pushTime" />
        <result column="expire_date" property="expireDate" />
        <result column="expire" property="expire" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, title, content, status, create_by, create_time, update_by, update_time, push_aims,push_time,expire_date,expire
    </sql>

    <update id="updateExpired">
        UPDATE bulletin SET status=3 WHERE expire=1 AND expire_date &lt; now();
    </update>

    <select id="selectByType" resultType="cn.meiot.entity.Bulletin">
        SELECT
          id,title,push_time
        FROM bulletin WHERE (push_aims = 0 OR push_aims =#{type}) AND status = 1
    </select>

</mapper>
