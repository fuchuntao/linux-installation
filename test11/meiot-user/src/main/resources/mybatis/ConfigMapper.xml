<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.meiot.mapper.ConfigMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.meiot.entity.Config">
        <id column="id" property="id" />
        <result column="c_key" property="cKey" />
        <result column="title" property="title" />
        <result column="value" property="value" />
        <result column="key_type" property="keyType" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="type" property="type" />
        <result column="deleted" property="deleted" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, c_key, title,value,key_type, description, create_time,update_time,c_type, deleted
    </sql>

    <update id="updateConfigById" >
        update config set title=#{title}, value = #{value},key_type=#{keyType},description=#{description},type=#{type} where id = #{id}

    </update>
    <select id="getValueByKey" resultType="java.lang.String">
        select value from config where  c_key= #{key} limit 1;
    </select>

</mapper>
