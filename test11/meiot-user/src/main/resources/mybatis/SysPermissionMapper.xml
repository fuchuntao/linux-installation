    <select id="selectUriByUserId" resultType="java.lang.String">

            select url from sys_permission where id in
            <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
                #{item}

            </foreach>

    </select>
    <select id="selectIdsByIds" resultType="java.lang.Integer">

        select id from sys_permission where id in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}

        </foreach>

    </select>
    <select id="selectUrlByRoles" resultType="java.lang.String">

        SELECT url FROM `sys_permission` WHERE id IN(  SELECT  sys_permission_id from sys_role_permission WHERE sys_role_id IN

        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}

        </foreach>

        )


    </select>

    <select id="selectUrlByRoleAndProjectId" resultType="java.lang.String">
        SELECT url FROM `sys_permission` WHERE id IN
        (SELECT permission_id FROM `role_project_permission` WHERE  project_id=#{projectId}
        and   role_id IN
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}

        </foreach>
        )


    </select>
