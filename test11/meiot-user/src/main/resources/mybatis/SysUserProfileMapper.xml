<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.meiot.mapper.SysUserProfileMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.meiot.entity.SysUserProfile">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="province" property="province" />
        <result column="city" property="city" />
        <result column="district" property="district" />
        <result column="head_portrait" property="district" />
        <result column="active_flag" property="activeFlag" />
        <result column="addr" property="addr" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, province, city, district,head_portrait,active_flag,addr
    </sql>
    <select id="selectCountById" resultType="java.lang.Integer">

        SELECT COUNT(1) FROM sys_user_profile WHERE user_id = #{userId}
    </select>

</mapper>
