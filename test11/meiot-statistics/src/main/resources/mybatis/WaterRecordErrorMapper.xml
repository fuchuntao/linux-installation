<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.meiot.mapper.WaterRecordErrorMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.meiot.entity.WaterRecordError">
        <id column="record_id" property="recordId" />
        <result column="id" property="id" />
        <result column="ccid" property="ccid" />
        <result column="meterid" property="meterid" />
        <result column="deviceid" property="deviceid" />
        <result column="readtime" property="readtime" />
        <result column="readcount" property="readcount" />
        <result column="checked" property="checked" />
        <result column="checker" property="checker" />
        <result column="create_time" property="createTime" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        record_id, id, ccid, meterid, deviceid, readtime, readcount, checked, checker, create_time, status
    </sql>


    <select id="selectByStatus" resultType="cn.meiot.entity.WaterRecordError">
      select <include refid="Base_Column_List"/>
      from water_record_error
      where status = #{status}
    </select>

</mapper>
