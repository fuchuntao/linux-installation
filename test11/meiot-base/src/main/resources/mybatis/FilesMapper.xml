<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.meiot.mapper.FilesMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.meiot.entity.Files">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="address" property="address"/>
        <result column="region" property="region"/>
        <result column="firmware_id" property="firmwareId"/>
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, address, region,firmware_id
    </sql>


    <select id="selectNameByVersion" resultType="java.lang.String">
        SELECT
        f.address
        FROM files f
        LEFT JOIN firmware fi
        ON f.firmware_id = fi.id
        WHERE fi.version=#{version}
    </select>
</mapper>
